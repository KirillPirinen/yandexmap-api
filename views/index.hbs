<div class="container"><h1>Главная страница</h1></div>
<div class="d-flex">
<div data-wr>
{{#if user}}
{{#each books}}
<div class="card" style="width: 18rem;">
  <img src="{{this.cover}}" class="card-img-top" alt="{{this.name}}">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
    <button data-like="{{this.id}}">Like</button>
    <span>{{this.Like.length}}</span>
</div>
{{/each}}
{{else}}
{{#each books}}
<div class="card" style="width: 18rem;">
  <img src="{{this.cover}}" class="card-img-top" alt="{{this.name}}">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
   <span>{{this.Like.length}}</span>
</div>
{{/each}}
{{/if}}
</div>
<div class="container">
  
</div>
